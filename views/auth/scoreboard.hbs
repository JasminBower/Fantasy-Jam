<div class="body-scoreboard" >

<div>
<h2>Scoreboard</h2>
</div>
<br>
<div>
<h4>
  {{winner}}
  is the current leader!
</h4>
</div>
<br>
<div>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      {{!-- <th scope="col">Classification</th> --}}
      <th scope="col">User</th>
      <th scope="col">Points</th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedTeams}}
      <tr>
        {{!-- <th scope="row"></th> --}}
        <td>{{this.username}}</td>
        <td>{{this.teamScore}}</td>

      </tr>
    {{/each}}
  </tbody>
</table>
</div>
{{!-- <ol>
  {{#each sortedTeams}}
    <li>{{this.teamScore}}, {{this.username}}</li>
  {{/each}}
</ol> --}}
<br>
<div>
<a href="../profile">Go back to profile</a>
</div>
<br>
<div>
<p>Racer Comments:</p>

<form method="POST" action="/scoreboard">
  <div class="input-field">
    <textarea
      type="text"
      name="comment"
      rows="1"
      placeholder="What's on your mind?"
    ></textarea>
  </div>
  <input type="hidden" name="article-id" value="{{comment._id}}" />
  <button type="submit">Add Comment</button>
</form>
<ul>
  {{#each mappedComments}}
    <li>{{this.comment}}</li>
    <p>by {{this.username}}</p>
    <p>at {{this.updatedAt}}</p>

    {{#if this.isCurrentUser}}
    <form method="GET" action="/comments/{{this._id}}">
    <button type="submit" value="{{this._id}}">Edit Comment</button>
    </form>

    <button type="submit">Delete Comment</button>
    {{/if}}
  {{/each}}
</ul>
</div>

<div>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      {{!-- <th scope="col">Classification</th> --}}
      <th scope="col">User</th>
      <th scope="col">Comment</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each allComments}}
      <tr>
        {{!-- <th scope="row"></th> --}}
        <td>{{this.username}}</td>
        <td>{{this.comment}}</td>
        <td>{{this.createdAt}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>




</div>